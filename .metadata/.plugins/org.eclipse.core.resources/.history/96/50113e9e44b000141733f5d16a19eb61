package nl.uva.td.experiment;

public class Score {

    private final double mPoints;

    private final double mLastStepTowerPoints;

    private final double mTotalTowerPoints;

    public Score(final double points, double lastStepTowerPoints, double totalTowerPoints) {
        mPoints = points;
    }

    /**
     * Get the points for the last run
     *
     * @return The points archeived
     */
    public double getPoints() {
        return mPoints;
    }

}
